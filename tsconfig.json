{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "core/**/*.ts",
    "adapters/**/*.ts",
    "tools/**/*.ts",
    "cli/**/*.ts",
    "ports/**/*.ts",
    "api/**/*.ts",
    "plugins/**/*.ts"
  ]
}
